{% extends 'base.html.twig' %}

{% block title %}Nos offres de locations{% endblock %}

{% block body %}
<div id="primary" class="content-area" style="margin-bottom: 0px;">
    <main id="main" class="site-main noo-container">
        <div class="noo-row">
            <div class="noo-main noo-md-9">
                <div class="noo-agent-archive">
                    <input type="hidden" name="display" value="style-grid">
                    <div class="noo-list-tool text-right">
                        <div class="view-mode">
                            <label>Nos biens en {{ type }}</label>
                        </div>
                        {#<div class="view-order">
                            <label>Trier par: </label>
                            <form method="get">
                                <input type="hidden" name="display" value="style-grid">
                                <select name="orderby" onchange="this.form.submit()">
                                    <option value="">Date Ascendante</option>
                                    <option value="name">Name ASC</option>
                                    <option value="date-asc">Date ( New to Old )</option>
                                    <option value="date">Date ( Old to New )</option>
                                    <option value="price">Price(High to Low) </option>
                                    <option value="price-asc"> Price(Low to High)</option>
                                    <option value="bath">Bath</option>
                                    <option value="featured">Featured</option>
                                </select>
                            </form>
                        </div>#}
                    </div>
                </div>
                <div class="noo-row noo-list-property style-grid">
                    {% for property in properties %}
                        <div class="noo-main noo-md-6">
                            <div class="noo-property-item-wrap">
                                <div class="noo-item-head">
                                    <h4 class="item-title">
                                        <a href="{{ property.url }}" title="{{ property.title }}">{{ property.title }}</a>
                                    </h4>
                                    <address>
                                        {% if property.neighborhood %}
                                            <span >{{ property.neighborhood }}</span> -
                                        {% endif %}
                                        <span >{{ property.street }}</span>
                                    </address>
                                </div>
                                <div class="noo-item-featured">
                                    <a href="{{ property.url }}" title="{{ property.title }}">
                                        <img class="rp-thumbnail" src="{{ asset('upload/images/property/'  ~ property.image) }}" alt="{{ property.title }}">
                                    </a>
                                </div>
                                <div class="noo-info">

                                    {% if property.surface %}
                                        <span>
                                            <i class="cfa-yellow fas fa-ruler"></i> Surface: {{ property.surface }} mÂ²
                                        </span>
                                    {% endif %}
                                    {% if property.room %}
                                        <span>
                                            <i class="cfa-yellow fas fa-bed"></i> Chambres: {{ property.room }}
                                        </span>
                                    {% endif %}
                                    {% if property.dpe %}
                                        <span>
                                            <i class="cfa-yellow fas fa-thermometer-half"></i> Classe DPE: {{ property.dpe }}
                                        </span>
                                    {% endif %}
                                    {% if property.floor %}
                                        <span>
                                            <i class="cfa-yellow fas fa-building"></i> Etage: {{ property.floor }}
                                        </span>
                                    {% endif %}
                                    {% if property.heating %}
                                        <span>
                                            <i class="cfa-yellow fas fa-fire"></i> Chauffage: {{ property.heating }}
                                        </span>
                                    {% endif %}
                                    {% if property.gse %}
                                        <span>
                                            <i class="cfa-yellow fas fa-home"></i> GES: {{ property.gse }}
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="noo-action">
                                    <div class="property-price">
                                        {% if property.price > 0 %}
                                            {% if property.type == 'location' %}
                                                <h4 >{{ property.price }} euros / mois</h4>
                                            {% else %}
                                                <h4 >{{ property.price }} euros</h4>
                                            {% endif %}
                                        {% else %}
                                            <h4 >Renseignez-vous</h4>
                                        {% endif %}
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="noo-main noo-md-3">
                <div class="noo-sidebar-wrap">
                    <section id="rp_advanced_search_property-3" class="widget widget_rp_advanced_search_property">
                        <h3 class="widget-title">Trouver une location</h3>
                        <div class="rp-advanced-search-property bootstrap">
                            <form>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Example select</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
